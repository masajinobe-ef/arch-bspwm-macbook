##---------- Keybindings ----------##

# Terminal (kitty)
super + Return
	kitty

# Open application menus
super + r
	dmenu_run -fn 'JetbrainsMono Nerd Font-12'

# Launch Apps
super + {w,e,t}
	{chromium,thunar,telegram-desktop}

##---------- System Keys ----------##

# Take a screenshot to clipboard
ctrl + shift + s
	sh $HOME/.local/bin/takeshot --clip

# Take screenshot of area
super + shift + s
	sh $HOME/.local/bin/takeshot --area

# Manage brightness
XF86MonBrightness{Up,Down}
    sh $HOME/.local/bin/brightness {up,down}

# Manage brightness-kb
XF86KbdBrightness{Up,Down}
    sh $HOME/.local/bin/brightness-kb {up,down}

# Manage volume
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle

##---------- Bspwm ----------##

# Quit/Restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close & Kill app
super + {_,shift + }q
	bspc node -{c,k}

# Tiled or Fullscreen switch
super + s
    sh $HOME/.local/bin/fullscreen-sw 

# Tiled or Monocle switch
super + m
	bspc desktop -l next

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Split horizontal, vertical or cancel
super + {apostrophe,semicolon,slash}
	bspc node -p {east,south,cancel}

# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Switch workspace
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Change focus to next window, including floating window
alt + Tab
	bspc node -f next.local

# Send focused window to another workspace
super + {_,shift + }{1-5}
	bspc {desktop -f,node -d} '^{1-5}'

